# GitHub Configuration
# Get your token from: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_USERNAME=your_github_username

# AI Model Configuration
# OpenAI API Key (for GPT models)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# DeepSeek API Configuration
DEEPSEEK_API_KEY=sk-your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# ChromaDB Configuration
CHROMA_DB_HOST=localhost
CHROMA_DB_PORT=8000
CHROMA_DB_PERSIST_DIR=./data/chroma_db
CHROMA_DB_COLLECTION=github_repos

# Embedding Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu
# Set to 'cuda' if you have a GPU available
# EMBEDDING_DEVICE=cuda

# Application Configuration
APP_ENV=development
# Options: development, staging, production

APP_HOST=0.0.0.0
APP_PORT=8501
APP_DEBUG=true

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_FILE=logs/starship.log

# Cache Configuration
CACHE_ENABLED=true
CACHE_BACKEND=memory
# Options: memory, redis, file

CACHE_TTL=3600
# Cache time-to-live in seconds

# Redis Configuration (if using Redis cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# GitHub API Rate Limiting
GITHUB_REQUESTS_PER_HOUR=5000
GITHUB_RETRY_DELAY=60

# Health Scoring Configuration
HEALTH_MIN_STARS=10
HEALTH_MIN_FORKS=5
HEALTH_MAX_AGE_DAYS=1825
HEALTH_EXCLUDE_ARCHIVED=true
HEALTH_EXCLUDE_PRIVATE=true

# RAG Search Configuration
RAG_TOP_K=10
RAG_SIMILARITY_THRESHOLD=0.7
RAG_MAX_TOKENS=1000
RAG_TEMPERATURE=0.1

# Data Processing
BATCH_SIZE=100
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30

# Security
API_KEY_REQUIRED=false
API_KEY=your_api_key_here

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=300

# Development Settings
AUTO_RELOAD=true
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Production Settings (uncomment for production)
# APP_ENV=production
# APP_DEBUG=false
# LOG_LEVEL=WARNING
# AUTO_RELOAD=false
# DEBUG_MODE=false
# VERBOSE_LOGGING=false